{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo run --release",
            "command": "cargo",
            "args": [
                "run",
                "--release"
            ],
            "problemMatcher": "$rustc",
        },
        {
            "label": "cargo clippy",
            "command": "cargo",
            "args": [
                "clippy",
            ],
            "problemMatcher": "$rustc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}